<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_poster"
            style="@style/Shimmer"
            android:layout_width="@dimen/card_poster_width"
            android:layout_height="@dimen/card_poster_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_name"
            style="@style/Shimmer"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toEndOf="@id/view_poster"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_set"
            style="@style/Shimmer"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_name" />

        <View
            android:id="@+id/view_type"
            style="@style/Shimmer"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_set" />

        <View
            android:id="@+id/view_faction"
            style="@style/Shimmer"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/little_margin"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toEndOf="@id/view_type"
            app:layout_constraintTop_toBottomOf="@id/view_set" />

        <View
            android:id="@+id/view_rarity"
            style="@style/Shimmer"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_faction" />

        <View
            android:id="@+id/view_attack"
            style="@style/Shimmer"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_rarity" />

        <View
            android:id="@+id/view_cost"
            style="@style/Shimmer"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_attack" />

        <View
            android:id="@+id/view_health"
            style="@style/Shimmer"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintTop_toBottomOf="@id/view_cost" />

        <View
            android:id="@+id/view_schedule_label"
            style="@style/Shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_poster" />

        <View
            android:id="@+id/view_schedule"
            style="@style/Shimmer"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_schedule_label" />

        <View
            android:id="@+id/view_summary_label"
            style="@style/Shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_schedule" />

        <View
            android:id="@+id/view_summary"
            style="@style/Shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_summary_label" />

        <View
            android:id="@+id/view_summary_2"
            style="@style/Shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_summary" />

        <View
            android:id="@+id/view_summary_3"
            style="@style/Shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_summary_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>